body, html { margin: 0; padding: 0; }
body {
	background: url(<%= asset_path 'bg.png' %>) 50% 50% repeat fixed;
	font-family: "Lucida Grande", Verdana, Helvetica, Arial, Sans-serif;
	width: 100%;
}
.center { text-align: center; }
.right { float: right; }
.left { float: left; }
.clear { clear: both; }

#header {
	height: 100px;
	width: 100%;
	background: #fff;
	position: fixed;
	top: 0;
	left: 0;
	opacity: 0.95;
	border-bottom: 1px solid #ddd;
}
#header h1 {
	margin: 0;
	padding: 0 0 0 10px;
	letter-spacing: -1px;
	font-family: "Helvetica Neue", Helvetica, Arial, Sans-Serif;
	font-weight: 100;
	font-size: 65px;
	float: left;
	line-height: 100px;
}
#header h1 a { text-decoration: none; }
#nav { float: right; }
#nav ul { list-style: none; margin: 0; padding: 0; }
#nav ul li, #nav ul li a {
	margin: 0;
	padding: 0;
	float: left;
	font-family: "Helvetica Neue", Helvetica, Arial, Sans-Serif;
	font-weight: 200;
	width: 150px;
	height: 100px;
	text-align: center;
	line-height: 100px;
}
#nav ul li { background: #eee; }
#nav ul li a { background: #fff; }
#nav ul li a:hover { text-decoration: none; }

.complete {text-decoration: line-through;}

.wrapper {
	width: 80%;
	margin: 140px auto 50px;
	background: #fff;
	-webkit-border-radius: 20px;
	border-radius: 20px;
	padding: 20px;
	-webkit-box-shadow:  0px 0px 10px 0px #999999;
	box-shadow:  0px 0px 10px 0px #999999;
}
a.greenBtn, .actions input {
  -moz-box-shadow:inset 0px 1px 0px 0px #cbf59b;
    -webkit-box-shadow:inset 0px 1px 0px 0px #cbf59b;
    box-shadow:inset 0px 1px 0px 0px #cbf59b;
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #9fcc6c), color-stop(1, #70aa29) );
    background:-moz-linear-gradient( center top, #9fcc6c 5%, #70aa29 100% );
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#9fcc6c', endColorstr='#70aa29');
    background-color:#9fcc6c;
    -moz-border-radius:6px;
    -webkit-border-radius:6px;
    border-radius:6px;
    border:1px solid #9fcc6c;
    display:inline-block;
    color:#ffffff;
    font-size:15px;
    font-weight:bold;
    padding:6px 24px;
    text-decoration:none;
    text-shadow:1px 1px 0px #7d7d7d;
		margin: 10px 0;
}

a.greenBtn:hover, .actions input:hover {
	  cursor: pointer;
		color: #fff;
    background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #70aa29), color-stop(1, #9fcc6c) );
    background:-moz-linear-gradient( center top, #70aa29 5%, #9fcc6c 100% );
    filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#70aa29', endColorstr='#9fcc6c');
    background-color:#70aa29;
}
a.greenBtn:active, .actions input:active {
    position:relative;
		color: #fff;
    top:1px;
}
tr.light { background: #eee; }
tr.dark  { background: #ccc; }
a { color: #000; }
a:hover { color: #999; }
a.deleteLink:hover { background: red; color: #fff; text-decoration: none; }
.alert {
	background: #FFF3C5;
	border: 1px solid #FFCC00;
	padding: 10px;
	margin: 15px 0 5px;
	font-size: 14px;
}
.notice {
	background: #a3ffa9;
	border: 1px solid #69c76f;
	padding: 10px;
	margin: 15px 0 5px;
	font-size: 14px;
	display: none;
}
.notice, .alert { text-align: center; }
input[type="text"], input[type="password"] {
	padding: 5px;
	font-size: 14px;
	margin: 10px 0;
}
#footer {
	font-size: 10px;
	color: #999;
	text-align: center;
	margin-bottom: 50px;
}
#footer a { color: #999; }
table#userSession td:first-child { text-align: right; padding-right: 5px; }
#listCount { padding-top: 15px; font-size: 12px; color: #666; }
ul#listItems li { text-align: left; }
#accountBlurb {
	font-family: "Helvetica Neue", Helvetica, Arial, Sans-Serif;
	font-weight: 100;
	font-size: 40px;
	margin-bottom: 40px;
}