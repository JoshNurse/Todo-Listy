<%= form_for([@list, @list.list_items.build]) do |f| %>

	<table id="userSession">
		<tr>
			<td><%= f.label :item, "New Item" %></td>
			<td><%= f.text_field :item, :id => "focusMe" %></td>
		</tr>
	</table>

  <div class="actions">
    <%= submit_tag "Add Item", :disable_with => "Adding..." %> or <%= link_to 'edit list', edit_list_path(@list) %>
  </div>
<% end %>